{# file: roles/jenkins_ci/templates/hudson.tasks.Mailer.xml.j2
#}
<?xml version='1.0' encoding='UTF-8'?>
<hudson.tasks.Mailer_-DescriptorImpl>
  <defaultSuffix></defaultSuffix>
  <hudsonUrl>https://{{ public_hostname | mandatory }}/</hudsonUrl>
  <smtpAuthUsername>{{ jenkins_smtp_username | mandatory }}</smtpAuthUsername>
  <smtpAuthPassword>{{ jenkins_smtp_password | mandatory }}</smtpAuthPassword>
  <adminAddress>{{ management_email | mandatory }}</adminAddress>
  <smtpHost>{{ jenkins_smtp_hostname | mandatory }}</smtpHost>
  <useSsl>{{ 'true' if jenkins_smtp_ssl|default(False)|bool else 'false' }}</useSsl>
  <smtpPort>{{ jenkins_smtp_port | mandatory }}</smtpPort>
  <charset>UTF-8</charset>
</hudson.tasks.Mailer_-DescriptorImpl>
